// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  userId     Int         @id @default(autoincrement())
  email      String      @unique
  created_at DateTime    @default(now())
  password   String
  co2Produced Int @default(0)
  isAdmin     Boolean @default(false)
  posts post[]
  userOtpId      Int
  isVerified Boolean @default(false)
}

model post {
  postId Int @id @default(autoincrement())
  quote String  @default(" ")
  usuario   usuario @relation(fields: [userId], references: [userId])
  userId Int
}

model CategoryPost {
  categorypostId    Int           @id @default(autoincrement())
  name              String
  infoposts         InfoPost[]
}

model InfoPost {
  infopostId        Int           @id @default(autoincrement())
  title             String
  text              String
  created_at        DateTime      @default(now())
  category          CategoryPost  @relation(fields: [categorypostId], references: [categorypostId])
  categorypostId    Int 
}